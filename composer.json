{
    "name": "aleksandertabor/laravel-mail-manager",
    "description": "A tool for managing all of your Laravel mails - preview and send.",
    "keywords": [
        "aleksandertabor",
        "laravel-mail-manager",
        "laravel",
        "mail"
    ],
    "support": {
        "issues": "https://github.com/aleksandertabor/laravel-mail-manager/issues",
        "source": "https://github.com/aleksandertabor/laravel-mail-manager"
    },
    "homepage": "https://github.com/aleksandertabor/laravel-mail-manager",
    "license": "MIT",
    "authors": [
        {
            "name": "Aleksander Tabor",
            "email": "alekx.tabor@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.62",
        "illuminate/support": "^8.0",
        "illuminate/console": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.21",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "AleksanderTabor\\MailManager\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AleksanderTabor\\MailManager\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AleksanderTabor\\MailManager\\MailManagerServiceProvider"
            ],
            "aliases": {
                "MailManager": "AleksanderTabor\\MailManager\\MailManagerFacade"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
